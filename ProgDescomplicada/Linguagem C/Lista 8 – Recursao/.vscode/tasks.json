{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar com math.h",
      "type": "shell",
      "command": "gcc",
      "args": [
        "${file}",               // Arquivo fonte atual
        "-o",                    // Flag para definir o nome do executável
        "${fileDirname}/${fileBasenameNoExtension}.out",  // Saída: pasta_do_arquivo/nome_do_arquivo.out
        "-lm",                   // Linka a biblioteca matemática (DEVE vir após o arquivo .c)
        "-Wall",                 // Habilita todos os warnings
        "-Wextra",               // Habilita warnings extras
        "-g"                    // Permite depuração com gdb
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",      // Mostra o terminal durante a compilação
        "clear": true           // Limpa o terminal antes de executar
      }
    }
  ]
}